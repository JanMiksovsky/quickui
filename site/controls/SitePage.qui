<Control name="SitePage">

<prototype>
	<Page fill="true">
		<table id="tableMain">
			<tr id="topRow">
				<td id="logoCell">
					<Link href="/home/default.html" id="logotype">
						<span class="bracket">&lt;</span>QuickUI<span class="bracket">&gt;</span>
					</Link>
					<div id="tagline">Modular web control framework</div>
				</td>
				<td id="topNavigation"><NavigationBar id="navigationBar"/></td>
			</tr>
			<tr>
				<td id="leftNavigation">
					<h1>Â </h1> <!-- h1 won't actually appear, just used for space -->
					<Navigator id="SitePage_navigationLinks"/>
					<div id="SitePage_sidebar" />
				</td>
				<td id="pageCanvas">
					<h1 id="SitePage_title" />
					<div id="SitePage_content" />
				</td>
			</tr>
		</table>
	</Page>
</prototype>

<style>

{
    box-sizing: border-box;
    -moz-box-sizing: border-box;
    -ms-box-sizing: border-box;
    -webkit-box-sizing: border-box;
    height: 100%;
    overflow-y: scroll;
}

#tableMain {
	border-collapse: collapse;
	height: 100%;
	width: 100%;
}

td {
	padding: 20px;
	vertical-align: top;
}

#topRow {
	background-image: url(/QuickUI/site/resources/water.jpg);
	background-repeat: no-repeat;
	background-color: #2d7ab0;
	border-bottom: 1px solid #391c01;
	color: white;
}

#logoCell {
	vertical-align: bottom;
	width: 260px;
}

#logotype a {
	border: none !important;
	color: white !important;
	font-size: 24pt;
	font-weight: bold;
}

.bracket {
	color: #D7C5B4;
	font-weight: normal;
}

#tagline {
	font-size: 10pt;
}

#topNavigation {
	padding-left: 40px;
	vertical-align: bottom;
}

#leftNavigation {
	background-color: #391c01;
	height: 100%;
	width: 0;
}

#pageCanvas {
	/* font-family: Times, serif; */
	font-size: 11pt;
	padding-left: 40px;
}

#SitePage_area {
	font-family: Tahoma, Arial, Helvetica, sans-serif;
	font-size: smaller;
	font-variant: small-caps;
	letter-spacing: 2px;
}

#leftNavigation {
	color: white;
}

#leftNavigation a {
	border: none !important;
	color: white !important;
}

#leftNavigation a:hover {
	background-color: #928274;
}

#SitePage_content {
	max-width: 800px;
}

.CodeOutput {
	margin: 5px 0 10px 0;
}


</style>

<script>
$.extend(SitePage.prototype, {
	
	area: QuickUI.Property(),
	content: QuickUI.Element("SitePage_content").content(),
	navigationLinks: QuickUI.Element("SitePage_navigationLinks").content(),
	sidebar: QuickUI.Element("SitePage_sidebar").content(),
	
	ready: function() {
		QuickUI(this.navigationBar).highlightCurrentArea();
		QuickUI(this.SitePage_navigationLinks).highlightCurrentPage();
	},
	
	title: function(value) {
		if (value !== undefined)
		{
			$(this.SitePage_title).html(value);
			return SitePage.superProto.title.call(this, value + " - QuickUI");
		}
		else
		{
			return SitePage.superProto.title.call(this);
		}
	}
	
});
</script>

</Control>