<!--
Comprehensive control:
Tests a bunch of compiler features.
-->

<Control className="Comprehensive" tag="div">

<prototype>
  <SampleBaseClass>
    <Simple id="message">
      Hello, <i>world</i>!
    </Simple>
    <div>
      <p id="Comprehensive_content" />
    </div>
  </SampleBaseClass>
</prototype>

<style>

/* Base control style */
{
    font-family: "Arial";
}

p {
    font-family: "Times New Roman";
}

.Comprehensive.combo {
    color: red;
}

</style>

<script>
Comprehensive.prototype.extend({
  content: Control.chain( "$Comprehensive_content", "content", ),
  foo: function()
  {
      alert("Hello, world!");
  }
});
</script>

</Control>
